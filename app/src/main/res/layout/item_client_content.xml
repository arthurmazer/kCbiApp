<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/ivPerson"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/textNameClient"
        android:layout_width="206dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Nome da Pessoa"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivPerson"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBirthdayClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Aniv: 01/09/1989"
        app:layout_constraintStart_toEndOf="@+id/ivPerson"
        app:layout_constraintTop_toBottomOf="@+id/textNameClient" />

    <ImageView
        android:id="@+id/ivWhatsapp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivPerson"
        app:layout_constraintTop_toBottomOf="@+id/textBirthdayClient"
        app:srcCompat="@drawable/icon_whatsapp" />

    <ImageView
        android:id="@+id/ivFacebook"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivWhatsapp"
        app:layout_constraintTop_toBottomOf="@+id/textBirthdayClient"
        app:srcCompat="@drawable/icon_facebook" />

    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivFacebook"
        app:layout_constraintTop_toBottomOf="@+id/textBirthdayClient"
        app:srcCompat="@drawable/icon_location" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="93dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:text="Último Pedido: Há 7 dias"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbBookmark" />

    <CheckBox
        android:id="@+id/cbBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>